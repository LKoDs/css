<header class='header'>
  {{> headerDark}}
</header>

<main class='main'>

  <div class='hero'>
    {{#with hero}}
      <h1 class='hero_title'>{{title}}</h1>
      <p class='hero_text'>{{description}}</p>
      {{#with button}}
        <a href='{{url}}' class='hero_button'>{{text}}</a>
      {{/with}}
    {{/with}}
  </div>

  <div class='about'>
    {{#with about}}
      <h3 class='about_title'>{{heading}}</h3>
      <p class='about_text'>{{info}}</p>
    {{/with}}
  </div>
</main>

<div class='articles'>
  <div class='articles_header'>
    <h2 class='articles_title'>Our articles</h2>
    <button class='articles_button_view'>View All</button>
  </div>

  <div class='article_cards'>
    {{> articleCardDark}}
  </div>
</div>

<footer class='footer'>
  {{> footerDark}}
</footer>